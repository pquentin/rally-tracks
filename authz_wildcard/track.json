{
  "version": 2,
  "description": "Tutorial benchmark for Rally",
  "indices": [
    {
      "name": "index",
      "body": "index.json"
    }
  ],
  "corpora": [
    {
      "name": "rally-tutorial",
      "documents": [
        {
          "source-file": "documents.json",
          "document-count": 1,
          "uncompressed-bytes": 3
        }
      ]
    }
  ],
  "schedule": [
    {
      "operation": {
        "operation-type": "delete-index"
      }
    },
    {
      "operation": {
        "operation-type": "create-index"
      }
    },
    {
      "operation": {
        "operation-type": "create-custom-aliases"
      }
    },
    {
      "operation": {
        "operation-type": "cluster-health",
        "request-params": {
          "wait_for_status": "green"
        },
        "retry-until-success": true
      }
    },
    {
      "operation": {
        "name": "field-caps-load",
        "operation-type": "raw-request",
        "path": "/alias-component1-type1-tag*-year1/_field_caps?fields=*",
        "method": "GET"
      },
      "clients": 8,
      "warmup-iterations": 100,
      "iterations": 100
    }
  ]
}
